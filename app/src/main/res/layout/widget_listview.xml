<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_widget_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/ingredients"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:background="@color/white"
        android:textColor="@color/black"
        android:padding="@dimen/padding_4dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
    <ListView
        android:id="@+id/lv_recipe_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_widget_recipe_name"/>
</RelativeLayout>

<RelativeLayout
    android:id="@+id/rl_emptyView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_widget_no_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:text="@string/no_recipes"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps"
        android:background="@color/colorPrimaryDark"
        style="@style/Base.TextAppearance.AppCompat.Display1"
        android:padding="@dimen/padding_8dp" />
</RelativeLayout>

</FrameLayout>