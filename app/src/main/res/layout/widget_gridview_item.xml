<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_4dp"
    android:layout_marginLeft="@dimen/margin_4dp"
    android:layout_marginEnd="@dimen/margin_4dp"
    android:layout_marginRight="@dimen/margin_4dp"
    android:layout_marginTop="@dimen/margin_4dp"
    android:layout_marginBottom="@dimen/margin_4dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_widget_recipes"
        android:layout_width="@dimen/recipecard_iv_2_width"
        android:layout_height="@dimen/recipe_card_iv_height"
        android:scaleType="fitXY"
        android:contentDescription="@string/recipe_image"
        android:src="@drawable/bk" />

    <TextView
        android:id="@+id/tv_widget_recipes_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cheese_cake"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_4dp"/>
</LinearLayout>